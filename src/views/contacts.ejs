<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Contacts</h1>
                    <p class="text-center lead">Create and Update your contacts.</p>

                    <%- include('includes/messages'); %>

                        <% if(contact._id) { %>
                            <form action="/contacts/edit/<%= contact._id %>" method="POST">
                                <% } else { %>
                                    <form action="/contacts/register" method="POST">
                                        <% } %>
                                            <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                                            <div class="mb-3">
                                                <label>First Name</label>
                                                <input value="<%= contact.firstName %>" type="text" name="firstName"
                                                    class="form-control">
                                            </div>
                                            <div class="mb-3">
                                                <label>Last Name</label>
                                                <input value="<%= contact.lastName %>" type="text" name="lastName"
                                                    class="form-control">
                                            </div>
                                            <div class="mb-3">
                                                <label>Email</label>
                                                <input value="<%= contact.email %>" type=" email" name="email"
                                                    class="form-control">
                                            </div>
                                            <div class="mb-3">
                                                <label>Phone</label>
                                                <input value="<%= contact.phone %>" type=" tel" name="phone"
                                                    class="form-control">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                    </form>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
        <%- include('includes/footer') %>